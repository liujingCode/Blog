{
    "title": "爱生活爱Coding",
    "description": "不重复造轮子",
    "author": "liujing",
    "language": "zh-hans",
    "links": {
        "sidebar": {
            "有问题找百度": "https://www.baidu.com"
        }
    },
    "plugins": [
        "json",                 // 讲文件结构和内容输出为json
        "chatlog",              // 聊天记录的页面
        "-highlight",           // 系统默认的高亮
        "-sharing",             // 系统默认的分享
        "search-pro",           // 支持中文搜索
        "pageview-count",       // 统计页面阅读数
        "copy-code-button",     // 代码块复制
        "github",               // 右上角链接到github的按钮
        "sharing-plus",         // 自定义分享
        "splitter",             // 导航栏左右拉伸
        "toggle-chapters",      // 目录折叠
        "tbfed-pagefooter",     // 页面的页脚信息
        "prism",                // 代码的高亮
        "insert-logo",          // 左上角logo
        "styles-less"           // less与css的转换
    ],
    "pluginsConfig": {
        "json": {
            "output": "_book/book.json"
        }
        "chatlog": {
            "users": {
                "claylo": {
                    "balloon": "#08f",
                    "text": "#fff"
                },
                "mojombo": {
                    "balloon": "#ddd",
                    "text": "#000"
                }
            }
        },
        "theme-default": {
            "showLevel": true
        },
        "github": {
            "url": "https://github.com/liujingCode"
        },
        "tbfed-pagefooter": {
            "copyright": "Copyright © liujing 2019",
            "modify_label": "创建时间：",
            "modify_format": "YYYY-MM-DD HH:mm:ss"
        },
        "sharing": {
            "facebook": true,
            "twitter": true,
            "weibo": true,
            "qq": true,
            "all": [
                "douban",
                "google",
                "qzone",
                "linkedin"
            ]
        },
        "prism": {
            "css": [
                "prismjs/themes/prism-solarizedlight.css"
            ],
            "lang": {
                "flow": "typescript"
            }
        },
        
        "insert-logo": {
            "url": "http://pvwouh26j.bkt.clouddn.com/liujingHead.png",
            "style": "background: none; max-height: 30px; min-height: 30px"
        }
    }
}
